{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"]
  }
}
